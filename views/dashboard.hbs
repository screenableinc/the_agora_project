<head>
    <link rel="stylesheet" href="/stylesheets/datatables.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/vendors.css">
</head>
<header>

</header>
<body>

<div class="container">

</div>

<div class="sidebar">
    <div class="container">
        <img id="logo" src="/business/logo" alt="">
    </div>
    <hr>
    <ul class="sideBarItems">
        <li id="addItems">Add Item</li>
        <li>Account Settings</li>

    </ul>
</div>
<div class="content">
<div class="container" rel="items">
    <div class="container">
        <h3>Items for Sale</h3>
    </div>
    <table id="itemsTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th class="th-sm">Product Id
            </th>
            <th class="th-sm">Name
            </th>
            <th class="th-sm">Category
            </th>
            <th class="th-sm">Barcode
            </th>
            <th class="th-sm">Price
            </th>
            <th class="th-sm">Description
            </th>
            <th class="th-sm">Deliverable
            </th>
        </tr>
        </thead>
        <tbody id="itemsTableBody">


        </tbody>
        <tfoot>

        </tfoot>
    </table>
</div>
<div class="container">
    <div class="container">
        <h3>Orders</h3>
    </div>
    <table id="ordersTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th class="th-sm">Product Id
            </th>
            <th class="th-sm">Name
            </th>
            <th class="th-sm">Quantity
            </th>
            <th class="th-sm">Price
            </th>
            <th class="th-sm">Location
            </th>
            <th class="th-sm">Order Made
            </th>
            <th>

            </th>
        </tr>
        </thead>
        <tbody >


        </tbody>
        <tfoot>

        </tfoot>
    </table>
</div>
</div>

<!--modals-->
<div id="addItemModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="uploadImage" style="text-align: center">

                    <img id="triggerUpload" style="width: 100px;height: 100px" src="/images/add_photo.png" accept="image/x-png,image/gif,image/jpeg" alt="">
                </div>
                <hr>
                <form action="" id="addItemForm" enctype="multipart/form-data">

                    <input hidden name="productId" type="text" id="productId">

                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="bmd-label-floating">Quantity</label>
                            <input required placeholder="-1 for readily available" id="productId" type="number" class="form-control" name="quantity">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="bmd-label-floating">Product Name</label>
                            <input required id="name" type="text" class="form-control" name="productName">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="bmd-label-floating">Barcode</label>
                            <input required id="Barcode" type="text" class="form-control" name="barcode">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="bmd-label-floating">Category</label>
                            <select class="form-control" name="category" id="categories"></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="bmd-label-floating">Price</label>
                            <input required id="price" type="number" class="form-control" name="price">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="bmd-label-floating">Deliverable</label>
                            <select class="form-control" name="deliverable" id="deliverable">
                                <option value=0>No</option>
                                <option value=1>Yes</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="bmd-label-floating">Description</label>
                            <textarea required id="description" type="text" class="form-control" name="description"></textarea>
                        </div>
                    </div>
                </div>
                    <input name="image" type="file" hidden id="uploadImage">
                    <div class="modal-footer">
                        <button id="addItem" type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<!--end modals-->
<script type="text/javascript" src="/js/jquery-3.2.1.min.js"></script>
<script src="/js/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
